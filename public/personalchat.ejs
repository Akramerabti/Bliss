  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav>
    <h1><a href="/">Collaboardation</a></h1>
    <ul id = "uservalue" data-user=<%= JSON.stringify(locals.user && locals.user.name) %>>
      <% if (locals.user)  {%>
        <li>Welcome, <%= user.name %></li>
        <li><a href="/logout">Log out</a></li>
        <%} else {  %>
        <li><a href="/login">Log in</a></li>
        <li><a href="/signup" class="btn">Sign up</a></li>
        <% }  %>
    </ul>
  </nav>
    <div class="join-container">
      <header class="join-header">
        <h1> Collababoard!</h1>
      </header>
      <main class="join-main">
        <form action="/personalchat">
          <div class="form-control">
            <label for ="personal"> Public collaboardation:</label>
             <input
              type = "text"
              name = "name"
              id="name"
              placeholder="Enter User's name"
              required
              />
              <div class="flex">
                <button type="submit" class="btn">Chat to specific user</button>
              </div>
          </div>
        </form>
      </main>
    </div>
   <script>
    // Set a JavaScript variable with the user.name value
    const username = "<%= user.name %>";
  </script>
   <script src="/socket.io/socket.io.js"></script>
