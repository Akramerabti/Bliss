            </li>
            <li>
              <button class="friend-button">Friend 3</button>
            </li>
            <!-- Add more friends as needed -->
          </ul>
    
          <h2>Your Groups</h2>
          <ul class="groups-list">
            <!-- List of groups goes here -->
