              <button class="group-button">Group 1</button>
            </li>
            <li>
              <button class="group-button">Group 2</button>
            </li>
            <li>
              <button class="group-button">Group 3</button>
            </li>
            <!-- Add more groups as needed -->
          </ul>
        </div>
