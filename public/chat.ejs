  <style>
    /* Loading screen styles */
    body {
      margin: 0;
      overflow: hidden;
      position: relative;
    }

    .loading-screen {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background-color: black; /* Set the background color to black */
      z-index: 5000; /* Set a high z-index to ensure it's on top */
    }

    svg {
      align-items: center;
      width: 100px;
      height: 500px;
    }

    .path-top,
    .path-bottom {
      fill: none;
      stroke: #ffec00;
      stroke-width: 8;
      stroke-dasharray: 320; /* Length of the path */
      stroke-dashoffset: 300; /* Offset to hide the path initially */
      animation: dash 3s ease-in-out forwards;
    }

    .path-top {
      animation-delay: 0.5s; /* Delay the top part animation by 0.5s */
    }

    @keyframes dash {
      to {
        stroke-dashoffset: 0; /* Animate to reveal the path */
      }
    }

    /* Keyframe animation for fade-out and zooming transition */
    @keyframes fadeZoomOut {
      0% {
        opacity: 1;
        transform: scale(1);
      }
      100% {
        opacity: 0;
        transform: scale(1.5);
      }
    }

    /* Add an animation to hide components after 5 seconds */
    .hide-components {
      animation: hide 0.5s ease-in-out 5s forwards;
    }

    @keyframes hide {
      to {
        opacity: 0;
      }
    }
  </style>
</head>
