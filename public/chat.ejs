    // Remove the loading screen and its contents after animation
    setTimeout(() => {
      const loadingScreen = document.querySelector('.loading-screen');
      if (loadingScreen) {
        loadingScreen.remove();
      }
    }, 5500); // 5.5 seconds (animation duration + delay)
  </script>



